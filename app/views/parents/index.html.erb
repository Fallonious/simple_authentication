<p id="notice"><%= notice %></p>

<h1>Listing Parents</h1>

<table>
  <thead>
    <tr>
      <th>Child name</th>
      <th>Parent name</th>
      <th>Parent email</th>
      <th>Child class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent|%>
    .reduce
      <tr>
        <td><%= parent.child_name %></td>
        <td><%= parent.parent_name %></td>
        <td><%= parent.parent_email %></td>
        <td><%= parent.child_class %></td>
        <td><%= link_to 'Show', parent %></td>
        <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
        <td><%= link_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

